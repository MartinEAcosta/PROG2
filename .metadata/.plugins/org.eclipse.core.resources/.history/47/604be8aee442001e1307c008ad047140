package TP2.Agenda;

import java.time.LocalDate;
import java.time.LocalTime;
import java.util.ArrayList;

public class Reunion {

	private String ubicacion,tema;
	private double duracion;
	private LocalDate fecha;
	private LocalTime hora;
	private ArrayList<Persona> Personas;
	
	public Reunion(String ubicacion,String tema, double duracion, LocalDate fecha, LocalTime hora) {
		this.ubicacion = ubicacion;
		this.tema = tema;
		this.duracion = duracion;
		this.fecha = fecha;
		this.hora = hora;
		this.Personas = new ArrayList<>();
	}

	public String getUbicacion() {
		return ubicacion;
	}

	public void setUbicacion(String ubicacion) {
		this.ubicacion = ubicacion;
	}

	public String getTema() {
		return tema;
	}

	public void setTema(String tema) {
		this.tema = tema;
	}

	public double getDuracion() {
		return duracion;
	}

	public void setDuracion(double duracion) {
		this.duracion = duracion;
	}

	public LocalDate getFecha() {
		return fecha;
	}

	public void setFecha(LocalDate fecha) {
		this.fecha = fecha;
	}

	public LocalTime getHora() {
		return hora;
	}

	public void setHora(LocalTime hora) {
		this.hora = hora;
	}
	
	public boolean chequeoHora(Reunion reunion) {
		return (this.fecha == reunion.getFecha() && this.hora == reunion.getHora());
	}

	public ArrayList<Persona> getPersonas() {
		return Personas;
	}
	
	public void addPersona(Persona a) {
		if(!this.Personas.contains(a))
			this.Personas.add(a);
	}
	//probar
	public void removePersona(Persona a) {
		if(this.Personas.contains(a))
			this.Personas.remove(a);
	}
	
	public void setPersonas(ArrayList<Persona> personas) {
		Personas = personas;
	}
	
	
	
}
