package Clase1708;

public class Juego {

	private int puntos1;
	private int puntos2;
	//podria llevar dados
	
	private static int MAX = 10;
	private static int valido = 7;
	
	
	public Juego() {
		puntos1 = 0;
		puntos2 = 0;
	}
	
	public int getPuntos1() {
		return puntos1;
	}
	
	public int getPuntos2() {
		return puntos2;
	}
	
	public void jugar() {
		for(int i = 0; i < MAX; i++) {
			int resultado1 = tirarDado() + tirarDado();
			int resultado2 = tirarDado() + tirarDado();
			
			if(resultado1 > resultado2 && resultado1 > valido)
				puntos1++;
			else
				if(resultado2 > resultado1 && resultado2 > valido)
					puntos2++;
		}
		if(puntos1 > puntos2)
			System.out.println("Gano jugador 1, con una cantidad de puntos de: " + puntos1 + " Contra " + puntos2 + " Del jugador 2");
		else
			if(puntos2 > puntos1)
				System.out.println("Gano jugador 2, con una cantidad de puntos de: " + puntos2 + " Contra " + puntos1 + " Del jugador 1");
			else
				System.out.println("Empate");
				
	}

	private int tirarDado() {
		
		return (int)(Math.random() * 6) + 1;
	}
	
}
