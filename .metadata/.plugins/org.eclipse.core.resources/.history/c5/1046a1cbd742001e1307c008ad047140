package TP2.Agenda;

import java.util.ArrayList;

public class Agenda {
	
	private ArrayList<Reunion> Reuniones;
	
	public Agenda () {
		this.Reuniones = new ArrayList<>();
	}

	public ArrayList<Reunion> getReuniones() {
		return Reuniones;
	}

	public void setReuniones(ArrayList<Reunion> reuniones) {
		Reuniones = reuniones;
	}
	
	public void addReunion(Reunion a) {
		if(!this.Reuniones.contains(a)) {
			for(int i = 0; i< this.Reuniones.size();i++) {
				if(this.Reuniones.get(i).chequeoHora(a)) {
					this.Reuniones.add(a);
				}
				else
					System.out.println("No puedes aÃ±adir una reunion en la misma hora.");
			}
		}
	}
	
	
}
